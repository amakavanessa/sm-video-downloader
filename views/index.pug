doctype html 
html
head  
  meta(charset='UTF-8')
  link(rel="stylesheet", href="/styles.css")
  script(src="/index.js")
body
  form(action="/search", method="POST" id = "search")
    input(type="text", name="query", placeholder="Paste link")
    button(type="submit") Download
  
  if err 
    .err = err

  if files
    h1 My Downloaded Files
    div.video-gallery
      each file in files
        div.video
          //- - var thumbnail = file.replace('mp4', 'png')
          //- img(src=`thumbnails/video497.png`, alt="gpee")
          video(width="250" height="200" controls="false")
            source(src=`downloaded files/${file}`, type="video/mp4")
            p Your browser does not support the video tag.
            span= files